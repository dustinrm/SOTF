<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:weightSum="4"
        android:gravity="center">
        <Button
            android:id="@+id/button"
            android:background="#FFFFFF"
            android:text="Word Scramble"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:backgroundTint="#E91E63" />
        <Button
            android:id="@+id/button2"
            android:text="Picture Matching"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:backgroundTint="#FF5722" />
        <Button
            android:id="@+id/button3"
            android:text="Activity Tutorial"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:backgroundTint="#673AB7" />
        <Button
            android:id="@+id/button4"
            android:text="Shape Selector"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:backgroundTint="@color/teal_200" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>